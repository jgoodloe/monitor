<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/nav_monitor">

    <fragment
        android:id="@+id/nav_monitor"
        android:name="com.monitor.ui.monitor.MonitorFragment"
        android:label="@string/menu_monitor"
        tools:layout="@layout/fragment_monitor" >
        <action
            android:id="@+id/action_nav_monitor_to_dnsDetail"
            app:destination="@id/nav_dns_detail" />
    </fragment>

    <fragment
        android:id="@+id/nav_transform"
        android:name="com.monitor.ui.transform.TransformFragment"
        android:label="@string/menu_transform"
        tools:layout="@layout/fragment_transform" />

    <fragment
        android:id="@+id/nav_reflow"
        android:name="com.monitor.ui.reflow.ReflowFragment"
        android:label="@string/menu_reflow"
        tools:layout="@layout/fragment_reflow" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.monitor.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />

    <fragment
        android:id="@+id/nav_settings"
        android:name="com.monitor.ui.settings.SettingsFragment"
        android:label="@string/menu_settings"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/nav_dns_detail"
        android:name="com.monitor.ui.dns.DnsDetailFragment"
        android:label="DNS Detail"
        tools:layout="@layout/fragment_dns_detail" >
        <argument
            android:name="hostname"
            app:argType="string" />
    </fragment>
</navigation>